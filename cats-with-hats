def cats_with_hats(number_of_cats):
    round = 1
    while round <= number_of_cats:
        print('round: ', round)
        for i in range(1, number_of_cats+1):
            if i % round == 0:
                print("i: ", i)
        round += 1
        # let the last round be printed
        if round > number_of_cats:
            break


cats_with_hats(100)
