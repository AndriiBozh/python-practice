class Car:

    def __init__(self, color, mileage):
        self.color = color
        self.mileage = mileage

    def description(self):
        return f"The {self.color} car has {self.mileage} miles"

    def drive(self, miles):
        self.mileage += miles


car_1 = Car('blue', 1000)
car_2 = Car('red', 4000)

print("car_2 mileage: ", car_2.mileage)

car_2.drive(100)

print("car_2 mileage: ", car_2.mileage)
